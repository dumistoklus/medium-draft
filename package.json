{
  "name": "medium-draft-ts",
  "version": "1.0.13",
  "description": "A medium like rich text editor built upon draft-js with an emphasis on eliminating mouse usage by adding relevant keyboard shortcuts",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/cjs/index.d.ts",
  "scripts": {
    "test": "jest",
    "start": "webpack-dev-server --mode development --host=0.0.0.0 --port=8080 --hot --inline",
    "dist": "webpack --mode production",
    "tslint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "build:esm": "tsc --declaration --outDir ./dist/esm --target ESNext --module es6",
    "build": "tsc --declaration && npm run build:esm && npm run dist && npm run build:styles:esm && npm run build:styles:cjs",
    "build:styles:esm": "copyfiles src/**/*.css dist/esm -u 1",
    "build:styles:cjs": "copyfiles src/**/*.css dist/cjs -u 1",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dumistoklus/medium-draft.git"
  },
  "types": "./dist/main.d.ts",
  "keywords": [],
  "author": "Brijesh Bittu <brijesh@bitwiser.in> (http://bitwiser.in/) and Ilia Goldfarb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dumistoklus/medium-draft/issues"
  },
  "homepage": "https://github.conode-sassm/dumistoklus/medium-draft#readme",
  "devDependencies": {
    "@types/draft-js": "0.10.34",
    "@types/jest": "24.0.15",
    "@types/memoize-one": "4.1.1",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/webpack-env": "1.13.9",
    "copyfiles": "2.1.0",
    "css-loader": "3.0.0",
    "draft-js": "0.10.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.8.0",
    "mini-css-extract-plugin": "0.7.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "style-loader": "0.23.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.5",
    "webpack-dev-server": "3.7.2"
  },
  "dependencies": {
    "draft-convert": "2.1.5",
    "immutable": "3.8.2",
    "memoize-one": "5.0.4"
  },
  "peerDependencies": {
    "draft-js": "0.10.5",
    "immutable": "*",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  }
}

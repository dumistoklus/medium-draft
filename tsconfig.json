{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": false,
    "removeComments": true,
    "rootDir": "./src/",
    "jsx": "react",
    "lib": [ "dom", "es2015", "es2016" ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./src/demo.tsx",
    "dist",
    "lib"
  ]
}
